<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" >
	<data >
		<variable name="vm"
		          type="com.android.mahindra.ui.screen.question.QuestionViewModel" />
		<import type="android.view.View" />
	</data >
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".ui.screen.question.QuestionActivity" >
		
		<androidx.appcompat.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:popupTheme="@style/AppTheme.PopupOverlay"
				app:title="Question"
				app:titleTextColor="@color/white" />
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="20dp"
				android:orientation="horizontal"
				android:layout_margin="10dp"
				app:layout_constraintStart_toStartOf="@+id/toolbar"
				app:layout_constraintEnd_toEndOf="@+id/toolbar"
				app:layout_constraintTop_toBottomOf="@+id/toolbar"
				android:id="@+id/linearLayout" >
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="14dp"
					android:textColor="@color/material_color_grey900"
					android:text="@{vm.indexCurrentQuestion+`/`+vm.totalQuestions}"
					tools:text="1/10"
					android:layout_weight="1" />
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="14dp"
					android:gravity="end"
					android:textColor="@color/material_color_grey900"
					tools:text="00:23:15"
					android:text="@{vm.timeToExpire}"
					android:layout_weight="1" />
		
		</LinearLayout >
		<androidx.viewpager.widget.ViewPager
				app:layout_constraintTop_toBottomOf="@+id/linearLayout"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				android:id="@+id/viewPager"
				android:layout_width="match_parent"
				android:layout_height="400dp"
				app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
				android:layout_marginBottom="8dp"
				app:layout_constraintBottom_toTopOf="@+id/submit" />
		
		<Button
				android:id="@+id/submit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/green_active"
				android:padding="16dp"
				android:visibility="gone"
				tools:visibility="visible"
				android:text="Submit"
				android:textAllCaps="false"
				android:textColor="@color/white"
				android:textSize="16dp"
				app:layout_constraintStart_toStartOf="@+id/button_layout"
				app:layout_constraintEnd_toEndOf="@+id/button_layout"
				app:layout_constraintBottom_toTopOf="@+id/button_layout" />
		
		<LinearLayout
				android:id="@+id/button_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent" >
			
			<Button
					android:id="@+id/previous"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/colorPrimary"
					android:padding="16dp"
					android:text="Previous"
					android:layout_weight="1"
					android:textAllCaps="false"
					android:textColor="@color/white"
					android:textSize="16dp" />
			
			<View android:layout_width="1dp"
			      android:layout_height="match_parent"
			      android:background="@color/material_color_grey100" />
			
			<Button
					android:id="@+id/next"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/colorPrimary"
					android:padding="16dp"
					android:text="Next"
					android:layout_weight="1"
					android:textAllCaps="false"
					android:textColor="@color/white"
					android:textSize="16dp" />
		
		</LinearLayout >
	
	
	</androidx.constraintlayout.widget.ConstraintLayout >
</layout >