        <androidx.viewpager.widget.ViewPager
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toTopOf="@+id/submit" />
        
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/view_line"
                app:layout_constraintEnd_toEndOf="@+id/view_line"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toTopOf="@+id/view_line"
                android:id="@+id/linearLayout2" >
            
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@{vm.indexCurrentQuestion+`/`+vm.totalQuestions}"
                      tools:text="1/10"
                      android:textStyle="bold"
                      android:layout_marginStart="20dp"
                      android:layout_weight="3"
                      android:textColor="@color/material_color_red600"
                      android:textSize="30dp" />
            
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:padding="10dp"
                      android:textSize="16dp"
                      android:textColor="@color/material_color_grey800"
                      android:background="@drawable/rect_border_grey"
                      android:layout_weight="1"
                      android:text="Mark as Review" />
        
        </LinearLayout >
        
        
        <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="50dp"
                android:background="@color/material_color_grey400"
                app:layout_constraintStart_toStartOf="@+id/button_layout"
                app:layout_constraintEnd_toEndOf="@+id/button_layout"
                app:layout_constraintBottom_toTopOf="@+id/button_layout" />
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attempted"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                android:layout_marginStart="20dp"
                android:id="@+id/attempted"
                android:textColor="@color/material_color_grey800"
                app:layout_constraintTop_toTopOf="@+id/attempted_no"
                app:layout_constraintBottom_toBottomOf="@+id/attempted_no" />
        
        
        <TextView
                
                android:id="@+id/attempted_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                app:layout_constraintStart_toEndOf="@+id/attempted"
                android:layout_marginStart="5dp"
                android:textColor="@color/material_color_grey800"
                app:layout_constraintBottom_toBottomOf="@+id/unattempted"
                app:layout_constraintTop_toTopOf="@+id/unattempted" />
        
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unattempted"
                android:layout_marginStart="30dp"
                android:id="@+id/unattempted"
                android:textColor="@color/material_color_grey800"
                app:layout_constraintTop_toTopOf="@+id/unattempted_no"
                app:layout_constraintBottom_toBottomOf="@+id/unattempted_no"
                app:layout_constraintStart_toEndOf="@+id/attempted_no" />
        
        
        <TextView
                android:id="@+id/unattempted_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                app:layout_constraintStart_toEndOf="@+id/unattempted"
                android:layout_marginStart="5dp"
                android:textColor="@color/material_color_grey800"
                app:layout_constraintBottom_toBottomOf="@+id/marked_as_review"
                app:layout_constraintTop_toTopOf="@+id/marked_as_review" />
        
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marked_as_review"
                android:id="@+id/marked_as_review"
                android:textColor="@color/material_color_grey800"
                app:layout_constraintStart_toEndOf="@+id/unattempted_no"
                app:layout_constraintTop_toTopOf="@+id/marked_as_review_no"
                app:layout_constraintBottom_toBottomOf="@+id/marked_as_review_no"
                android:layout_marginStart="30dp" />
        
        <TextView
                android:id="@+id/marked_as_review_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                app:layout_constraintStart_toEndOf="@+id/marked_as_review"
                android:layout_marginStart="5dp"
                android:textColor="@color/material_color_grey800"
                app:layout_constraintBottom_toTopOf="@+id/button_layout"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
        
        <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" >
            
            <Button
                    android:id="@+id/previous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="16dp"
                    android:text="Previous"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            
            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:background="@color/material_color_grey100" />
            
            <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="16dp"
                    android:text="Next"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
        
        </LinearLayout >
    
    
    </androidx.constraintlayout.widget.ConstraintLayout >
</layout >